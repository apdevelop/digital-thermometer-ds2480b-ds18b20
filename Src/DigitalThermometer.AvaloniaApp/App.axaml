<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DigitalThermometer.AvaloniaApp"
             x:Class="DigitalThermometer.AvaloniaApp.App"
			 RequestedThemeVariant="Default">

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Assets/MetroColors.xaml" />
				<ResourceInclude Source="/Assets/PathData.xaml" />
				<ResourceInclude Source="/Resources/i18n/App.en-US.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>

	<Application.Styles>
		<SimpleTheme  />
		<StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Simple.xaml"/>
	</Application.Styles>

</Application>
